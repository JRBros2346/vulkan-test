{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "windows": {
                "command": "python ${workspaceFolder}\\build.py"
            },
            "linux": {
                "command": "python3 ${workspaceFolder}/build.py"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}